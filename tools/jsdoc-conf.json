{
	"opts":
		{
            "recurse": true,
			"private": true,
			"lenient": false
		},
    "source":
        {
            "include": ["src/pearson"],
            "exclude":
                [
                    "src/pearson/brix/utils/answermanpolling.js",
                    "src/pearson/brix/test/fakeactivitydb.js",
                    "src/pearson/brix/mortar/relatedvalues.js",
                    "src/pearson/brix/widget-axes.js",
                    "src/pearson/brix/widget-multiplechoicequestion-old.js"
                ],
            "includePattern": ".+\\.js(doc)?$",
            "excludePattern": "(^|\\/|\\\\)_"
        },
    "tags":
        {
            "allowUnknownTags": true
        },
    "templates":
        {
            "cleverLinks": false,
            "monospaceLinks": false,
            "default": { "outputSourceFiles": true }
        },
    "plugins": ["plugins/markdown", "plugins/verboseOutput"],
    "markdown":
        {
            "parser": "evilstreak"
        }

}
